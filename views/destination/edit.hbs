<form action="/destination/edit/{{this._id}}" method="POST">
  <label>Title</label>
  <input type="text" name="title" value="{{this.title}}"/>
  <br>
  <label>Description</label>
  <textarea type="text" name="description" rows="5" cols="60">{{this.description}}</textarea>
  <br>
  <label>Image</label>
  <input type="text" name="imageUrl" value="{{this.imageUrl}}"/>
  <br>
  <input type="submit" value="Edit">
</form>